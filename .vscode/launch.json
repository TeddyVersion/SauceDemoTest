{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Playwright Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
        "args": ["test"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "DEBUG": "pw:api"
        }
      }
    ]
  }
  